{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2015", "DOM"],
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
